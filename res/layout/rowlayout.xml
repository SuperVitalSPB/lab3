<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@layout/rowlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" xmlns:android1="http://schemas.android.com/apk/res/android">

    <TableRow
        android1:layout_width="fill_parent"
        android1:layout_height="wrap_content"
        android1:layout_weight="1" >
	    
        <ImageView
            android1:id="@+id/icon"
            android1:layout_width="22sp"
            android1:layout_height="22sp"
            android1:layout_marginRight="10sp"
            android1:src="@drawable/ic_launcher" />

        <TextView
            android1:id="@+id/txtNominal"
            android1:layout_width="100dp"
            android1:layout_height="wrap_content"
            android1:hint="@+id/label"
            android1:textSize="20sp" />

        <TextView
            android1:id="@+id/txtCode"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android1:text="@+id/label"
            android1:textSize="20sp" />

        <TextView
            android1:id="@+id/txtRate"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_weight="1"
            android1:hint="@+id/label"
            android1:textSize="20sp" />	

	</TableRow>

</LinearLayout>